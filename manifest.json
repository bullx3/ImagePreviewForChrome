{
    "name": "ImagePreview",
    "short_name": "I P",
    "version": "1.2.4",
    "manifest_version": 2,

    "description": "サイトの画像ファイルを漫画ビュアーのように表示する",

    "incognito" : "split",

    "permissions": [
        "tabs",
        "contextMenus",
        "http://*/*",
        "https://*/*"
    ],

    "browser_action": {
        "default_icon": "icons/icon_32x32.png",
        "default_title": "Image Preview",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": [
            "config.js",
            "exec_view.js",
            "event.js"
        ],
        "persistent": false
    },

    "icons": {
        "16": "icons/icon_16x16.png",
        "32": "icons/icon_32x32.png",
        "64": "icons/icon_64x64.png",
        "128": "icons/icon_128x128.png"
    },

    "commands": {
        "change_image_preview":{
            "suggested_key": {
                "default": "Ctrl+Shift+O",
                "mac": "Command+Shift+O"
            },
            "description": "Change ImagePreview"
        },
        "_execute_browser_action":{
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "View ImagePreview's popup"
        }
    }
}