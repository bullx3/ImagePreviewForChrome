{
    "name": "ImagePreview(Change This)",
    "short_name": "I P",
    "version": "1.0",
    "manifest_version": 2,

    "description": "サイトの画像ファイルのみ表示する",

    "permissions": [
        "tabs",
        "contextMenus",
        "http://*/*",
        "https://*/*"
    ],

    "browser_action": {
        "default_icon": "icons/icon_32x32.png",
        "default_title": "Image Preview",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["config.js","event.js"],
        "persistent": true
    },

    "icons": {
        "16": "icons/icon_16x16.png",
        "32": "icons/icon_32x32.png",
        "64": "icons/icon_64x64.png",
        "128": "icons/icon_128x128.png"
    },

    "commands": {
        "change_image_viewer":{
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Change ImagePreview"
        },
        "_execute_browser_action":{
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "View ImagePreview's popup"
        }
    }
}